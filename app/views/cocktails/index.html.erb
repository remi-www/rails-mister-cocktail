

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url('<%= cl_image_path "qukakfqz6dwma6viixzz", height: 300, width: 400, crop: :fill %>')">
  <div class="container">
    <h1>Hardcore cocktails</h1>
    <p>Make you own cocktails, and do not forget to drink them all!</p>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key,width: 400, height: 300, crop: :fill %>')">
        <%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
  <%= link_to "New horrible cocktail", new_cocktail_path, class: "btn btn-ghost"%>
</div>
