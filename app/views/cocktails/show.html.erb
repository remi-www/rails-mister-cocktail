<h1><%= @cocktail.name %></h1>
<%= @ingredients %>
<h3>Ingredients:</h3>
<% @cocktail.doses.each do |dose|%>
<ul>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name%>
    <%= link_to "Delete dose", dose_path(dose), method: :delete, data: {confirm: "Are you sure ?"} %>
  </li>
</ul>
<% end %>

<%= link_to "Back to Cocktails", cocktails_path %>
<%= link_to "Add doses", new_cocktail_dose_path(@cocktail.id) %>
